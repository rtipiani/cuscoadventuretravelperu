---
import Layout from "../layouts/Layout.astro";

const plan = {
    titulo: "Tours en Cusco",
    subtitulo: "Explora experiencias únicas en la capital histórica del Imperio Inca",
    imagen: "/bg-cusco.png", // aquí coloca tu fondo real
};

const paquetes = [
    {
        dias: "Full Day",
        titulo: "CITY TOUR VIP",
        descripcion: "Recorrido por Qoricancha, Sacsayhuamán, Qenqo, Puca Pucara y Tambomachay.",
        etiqueta: "OFERTA",
        imagen: "./paquetes-cusco/qoricancha.png",
    },
    {
        dias: "Full Day",
        titulo: "VALLE SAGRADO MARAS + MORAY",
        descripcion: "Explora las salineras de Maras y los impresionantes andenes circulares de Moray.",
        etiqueta: "",
        imagen: "./paquetes-cusco/valle-sagrado.png",
    },
    {
        dias: "Full Day",
        titulo: "VALLE SAGRADO TRADICIONAL",
        descripcion: "Descubre Pisac, Ollantaytambo y Chinchero en un recorrido cultural por el Valle Sagrado.",
        etiqueta: "MÁS VENDIDO",
        imagen: "./paquetes-cusco/pisac.png",
    },
    {
        dias: "Medio Día",
        titulo: "MARAS + MORAY",
        descripcion: "Visita en medio día los icónicos andenes circulares de Moray y las salineras de Maras.",
        etiqueta: "",
        imagen: "./paquetes-cusco/maras-moray.png",
    },
    {
        dias: "Full Day",
        titulo: "MACHUPICCHU FULL DAY",
        descripcion: "Visita guiada a Machupicchu en un solo día, con transporte y guía especializado.",
        etiqueta: "MÁS VENDIDO",
        imagen: "./paquetes-cusco/machu-picchu.png",
    },
    {
        dias: "Full Day",
        titulo: "MONTAÑA DE COLORES TREKKING",
        descripcion: "Trekking a Vinicunca, la famosa montaña de siete colores.",
        etiqueta: "MÁS VENDIDO",
        imagen: "./paquetes-cusco/montana-colores.png",
    },
    {
        dias: "Full Day",
        titulo: "MONTAÑA DE COLORES EN CUATRIMOTOS",
        descripcion: "Aventura hacia la Montaña de Colores combinando cuatrimotos y trekking.",
        etiqueta: "",
        imagen: "./paquetes-cusco/montana-colores-cuatrimotos.png",
    },
    {
        dias: "Full Day",
        titulo: "LAGUNA HUMANTAY TREKKING",
        descripcion: "Trekking a la majestuosa Laguna Humantay, rodeada de nevados.",
        etiqueta: "MÁS VENDIDO",
        imagen: "./paquetes-cusco/laguna-humantay-trekking.png",
    },
    {
        dias: "Medio Día",
        titulo: "TOUR MÍSTICO",
        descripcion: "Ceremonias ancestrales y conexión espiritual con chamanes andinos.",
        etiqueta: "",
        imagen: "./paquetes-cusco/tour-mistico.png",
    },
    {
        dias: "Full Day",
        titulo: "VALLE SUR",
        descripcion: "Visita Tipón, Pikillacta y Andahuaylillas en un recorrido cultural.",
        etiqueta: "",
        imagen: "./paquetes-cusco/tipon.png",
    },
    {
        dias: "Full Day",
        titulo: "BUS ESCÉNICO 180 GRADOS",
        descripcion: "Viaja de Cusco a Puno en bus panorámico con paradas turísticas.",
        etiqueta: "",
        imagen: "./paquetes-cusco/bus-180-grados.png",
    },
    {
        dias: "Medio Día",
        titulo: "MORADA DE LOS DIOSES",
        descripcion: "Esculturas monumentales en piedra que representan deidades andinas.",
        etiqueta: "OFERTA",
        imagen: "./paquetes-cusco/morada-de-los-dioses.png",
    },
    {
        dias: "Full Day",
        titulo: "MARAS Y MORAY EN CUATRIMOTOS",
        descripcion: "Aventura en cuatrimotos hacia Moray y las salineras de Maras.",
        etiqueta: "",
        imagen: "./paquetes-cusco/maras-moray-cuatrimoto.png",
    },
    {
        dias: "Full Day",
        titulo: "PUENTE QESWACHACA",
        descripcion: "Conoce el último puente colgante inca hecho de fibra vegetal.",
        etiqueta: "",
        imagen: "./paquetes-cusco/puente-qeswachaca.png",
    },
    {
        dias: "Full Day",
        titulo: "SIETE LAGUNAS DE AUSANGATE",
        descripcion: "Trekking entre paisajes andinos y siete lagunas de distintos colores.",
        etiqueta: "",
        imagen: "./paquetes-cusco/7-lagunas-ausangate.png",
    },
    {
        dias: "Full Day",
        titulo: "WAQRAPUKARA",
        descripcion: "Imponente sitio arqueológico inca en lo alto de un cañón.",
        etiqueta: "",
        imagen: "./paquetes-cusco/waqrapukara.png",
    },
];
---

<Layout>
    <!-- HERO -->
    <section class="relative">
        <div 
            class="relative h-[90vh] md:h-[80vh] rounded-b-3xl overflow-hidden shadow-lg" 
            style={`background-image: url('${plan.imagen}'); background-size: cover; background-position: center;`}
        >
            <!-- Overlay -->
            <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/40 to-black/80"></div>

            <!-- Contenido Hero -->
            <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-6">
                <h1 class="font-extrabold text-white drop-shadow-lg leading-tight text-[clamp(1.8rem,4vw,3.2rem)]">
                    {plan.titulo}
                </h1>
                <p class="mt-3 text-white/80 max-w-2xl text-[clamp(0.9rem,2vw,1.2rem)]">
                    {plan.subtitulo}
                </p>

                <div class="mt-6 flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
                    <a href="#paquetes" class="w-full sm:w-auto bg-green-600 text-white px-6 py-3 rounded-xl shadow hover:bg-green-700 transition text-center">
                        Ver Tours
                    </a>
                    <a 
                        href={`https://wa.me/51973291892?text=${encodeURIComponent(`Hola, estoy interesado en los ${plan.titulo}`)}`} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        class="w-full sm:w-auto bg-white/90 text-green-800 px-6 py-3 rounded-xl shadow hover:bg-white transition text-center"
                    >
                        Reservar ahora
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- GRID DE TOURS -->
    <section class="py-20 bg-gray-100">
        <div class="max-w-7xl mx-auto px-6 lg:px-12 text-center">
            <!-- Título -->
            <h2 class="font-extrabold text-gray-900 mb-6 text-[clamp(1.6rem,3vw,2rem)]">
                Tours de Aventura, Cultura y Naturaleza en Cusco
            </h2>

            <!-- Subtítulo -->
            <p class="text-gray-700 mb-12 leading-relaxed text-[clamp(0.9rem,1.6vw,1rem)] max-w-3xl mx-auto">
                Elige entre experiencias únicas que combinan historia, arqueología, paisajes andinos y vivencias espirituales.  
                Encuentra el tour perfecto para ti en Cusco.
            </p>

            <!-- Grid -->
            <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
                {paquetes.map((p) => {
                    const whatsappLink = `https://wa.me/51973291892?text=Hola,%20quiero%20más%20información%20sobre%20el%20tour%20${encodeURIComponent(p.titulo)}%20(${encodeURIComponent(p.dias)})`;

                    return (
                        <div class="relative bg-white rounded-lg shadow-lg p-6 flex flex-col justify-between hover:shadow-2xl transition-transform transform hover:scale-105">
                            {p.etiqueta && (
                                <span class="absolute top-4 left-4 bg-[#ffc834] text-[#19470c] text-[clamp(0.65rem,1.4vw,0.75rem)] font-bold px-3 py-1 rounded-full shadow-md uppercase tracking-wide">
                                    {p.etiqueta}
                                </span>
                            )}
                            <div>
                                <img src={p.imagen} alt={p.titulo} class="w-full h-44 sm:h-48 object-cover rounded-md mb-5"/>
                                <p class="text-[#2d751b] font-medium uppercase tracking-wide text-[clamp(0.7rem,1.5vw,0.8rem)]">
                                    {p.dias}
                                </p>
                                <h3 class="font-bold text-gray-800 mt-2 text-[clamp(1rem,2vw,1.2rem)]">
                                    {p.titulo}
                                </h3>
                                <p class="text-gray-600 mt-4 leading-relaxed text-[clamp(0.85rem,1.5vw,0.95rem)]">
                                    {p.descripcion}
                                </p>
                            </div>

                            <div class="mt-6">
                                <a href={whatsappLink} target="_blank" class="inline-flex items-center justify-center bg-[#19470c] text-white py-2 px-5 rounded-md font-medium text-[clamp(0.85rem,1.5vw,0.95rem)] hover:bg-[#64a323] transition">
                                    <i class="fab fa-whatsapp mr-2"></i>
                                    Consultar Ahora
                                </a>
                            </div>
                        </div>
                    );
                })}
            </div>
        </div>
    </section>
</Layout>
