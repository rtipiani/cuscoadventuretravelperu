---
const plan = {
    titulo: "Términos y Condiciones",
    imagen: "/bg-terms.avif",
};

import Terminos from "../components/Terms.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <!-- Hero -->
    <section class="relative">
        <div
            class="relative h-[70vh] md:h-[60vh] rounded-b-3xl overflow-hidden shadow-lg"
            style={`background-image: url('${plan.imagen}'); background-size: cover; background-position: center;`}
        >
            <!-- Overlay -->
            <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/40 to-black/80"></div>

            <!-- Contenido Hero -->
            <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-6">
                <h1 class="font-extrabold text-white drop-shadow-lg leading-tight text-[clamp(1.6rem,4vw,2.8rem)]">
                    {plan.titulo}
                </h1>
                <p class="mt-3 text-white/80 max-w-2xl text-[clamp(0.9rem,2vw,1.1rem)]">
                    Al acceder y utilizar nuestros servicios de viajes, el usuario acepta los términos y condiciones aquí descritos. Recomendamos leerlos detenidamente antes de efectuar cualquier reserva.
                </p>
            </div>
        </div>
    </section>

    <!-- Contenido de Términos -->
    <Terminos />
</Layout>
