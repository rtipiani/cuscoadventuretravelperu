---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main>
		<div id="hero">
			<img src="/logo.png" alt="Logo de la empresa" class="logo" />
			<h1>Estamos construyendo tu sitio web</h1>
			<p>Gracias por la confianza, Leslie.</p>
		</div>
	</main>
</div>

<style>
	/* Fondo */
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		object-fit: cover;
		filter: blur(80px) brightness(0.8);
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', Arial, sans-serif;
		height: 100vh;
		margin: 0;
	}

	/* Contenido centrado */
	main {
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 20px;
	}

	#hero {
		text-align: center;
		animation: fadeIn 1.5s ease-in-out;
	}

	/* Logo responsive */
	.logo {
		width: 100px;
		margin-bottom: 20px;
		animation: fadeIn 2s ease-in-out;
	}

	@media (min-width: 768px) {
		.logo {
			width: 150px;
		}
	}

	h1 {
		font-size: 26px;
		color: #915a23;
		margin-bottom: 0.5em;
	}

	p {
		font-size: 18px;
		color: #915a23;
	}

	/* Animaci√≥n */
	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>

