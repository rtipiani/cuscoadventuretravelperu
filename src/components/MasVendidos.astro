---
const paquetes = [
    {
        dias: "Cusco 3D/2N",
        titulo: "CUSCO TRADICIONAL",
        descripcion: "City Tour, Machupicchu",
        etiqueta: "OFERTA",
        imagen: "./Qoricancha1.png",
    },
    {
        dias: "Cusco 6D/5N",
        titulo: "CUSCO MARAVILLOSO",
        descripcion: "City Tour, Valle Sagrado, Maras & Moray, Machupicchu, Montaña de 7 Colores, Laguna Humantay",
        etiqueta: "MÁS VENDIDO",
        imagen: "./Machupicchu-maravilla-del-mundo.png",
    },
    {
        dias: "Cusco 4D/3N",
        titulo: "CUSCO SAGRADO",
        descripcion: "City Tour, Valle Sagrado, Maras & Moray, Machupicchu",
        etiqueta: "MÁS VENDIDO",
        imagen: "./montana-de-colores-vinincunca-cusco.png",
    },
    {
        dias: "Cusco 7D/6N",
        titulo: "CUSCO SORPRENDENTE",
        descripcion: "City Tour, Valle Sagrado, Maras & Moray, Machupicchu, Montaña de 7 Colores, Laguna Humantay, Valle Sur",
        etiqueta: "",
        imagen: "./Laguna-Humantay-cusco.png",
    },
    {
        dias: "Cusco 5D/4N",
        titulo: "CUSCO INCREIBLE",
        descripcion: "City Tour, Valle Sagrado, Maras & Moray, Machupicchu, Montaña de 7 Colores",
        etiqueta: "MÁS VENDIDO",
        imagen: "./Tambomachay-city-tour.png",
    },
    {
        dias: "Cusco 8D/7N",
        titulo: "CUSCO EXTRAORDINARIO",
        descripcion: "City Tour, Valle Sagrado, Maras & Moray, Machupicchu, Montaña de 7 Colores, Laguna Humantay, Valle Sur, Morada",
        etiqueta: "MÁS VENDIDO",
        imagen: "./Morada-de-los-Dioses-cusco.png",
    }
];
---
<section class="py-20 bg-gray-100">
    <div class="max-w-7xl mx-auto px-6 lg:px-12 text-center">
        <!-- Título principal -->
        <h2 class="font-extrabold text-gray-900 mb-6 text-[clamp(1.6rem,3vw,2rem)]">
            Paquetes Vacacionales Exclusivos en Cusco
        </h2>

        <!-- Subtítulo -->
        <p class="text-gray-700 mb-12 leading-relaxed text-[clamp(0.9rem,1.6vw,1rem)] max-w-3xl mx-auto">
            Descubre la magia de Cusco con nuestros paquetes personalizados. Explora sitios arqueológicos impresionantes como Machu Picchu, vive las tradiciones incaicas y disfruta de la exquisita gastronomía peruana. ¡Una experiencia inolvidable te espera!
        </p>

        <!-- Grid de paquetes -->
        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {paquetes.map((p) => {
                const whatsappLink = `https://wa.me/51973291892?text=Hola,%20quiero%20más%20información%20sobre%20el%20paquete%20${encodeURIComponent(p.titulo)}%20(${encodeURIComponent(p.dias)})`;

                return (
                    <div class="relative bg-white rounded-lg shadow-lg p-6 flex flex-col justify-between hover:shadow-2xl transition-transform transform hover:scale-105">
                        {p.etiqueta && (
                            <span class="absolute top-4 left-4 bg-[#ffc834] text-[#19470c] text-[clamp(0.65rem,1.4vw,0.75rem)] font-bold px-3 py-1 rounded-full shadow-md uppercase tracking-wide">
                                {p.etiqueta}
                            </span>
                        )}
                        <div>
                            <img src={p.imagen} alt={p.titulo} class="w-full h-44 sm:h-48 object-cover rounded-md mb-5"/>
                            <p class="text-[#2d751b] font-medium uppercase tracking-wide text-[clamp(0.7rem,1.5vw,0.8rem)]">
                                {p.dias}
                            </p>
                            <h3 class="font-bold text-gray-800 mt-2 text-[clamp(1rem,2vw,1.2rem)]">
                                {p.titulo}
                            </h3>
                            <p class="text-gray-600 mt-4 leading-relaxed text-[clamp(0.85rem,1.5vw,0.95rem)]">
                                {p.descripcion}
                            </p>
                        </div>

                        <div class="mt-6">
                            <a href={whatsappLink} target="_blank" class="inline-flex items-center justify-center bg-[#19470c] text-white py-2 px-5 rounded-md font-medium text-[clamp(0.85rem,1.5vw,0.95rem)] hover:bg-[#64a323] transition">
                                <i class="fab fa-whatsapp mr-2"></i>
                                Consultar Ahora
                            </a>
                        </div>
                    </div>
                );
            })}
        </div>
    </div>
</section>